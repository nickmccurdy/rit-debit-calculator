<!-- main column -->
<div class="container">
  <div class="page-header">
    <h1>RIT Meal Debit Calculator</h1>

    <a href="https://eservices.rit.edu/eServices/login.do" target="blank">RIT Meal Debit Display</a>
    &nbsp;&nbsp;&nbsp;
    <a href="http://finweb.rit.edu/diningservices/mealplans/1112/resident.html" target="_blank">RIT Meal Plans</a>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>Input</h2>

      <form role="form">
        <label>Meal Plan</label>
        <div class="form-group">
          <div class="radio">
            <label>
              <input type="radio" name="meal_plan" value="all_debit">
              All Debit
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="meal_plan" value="10_plus">
              10 Plus
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="meal_plan" value="12_plus">
              12 Plus
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="meal_plan" value="14_plus">
              14 Plus
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="meal_plan" value="ultra">
              Ultra
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="meal_plan" value="custom" checked>
              Custom

              <div class="form-group">
                <label for="date_start">Meal Plan Start</label>
                <input type="date" class="form-control" id="date_start" name="date_start">
              </div>

              <div class="form-group">
                <label for="date_end">Meal Plan End</label>
                <input type="date" class="form-control" id="date_end" name="date_end">
              </div>

              <div class="form-group">
                <label for="money_total">Debit Total</label>
                <input type="number" class="form-control" id="money_total" name="money_total" size="7"  placeholder="Type something…">
              </div>
            </label>
          </div>
        </div>

        <div class="form-group">
          <label for="money_left">Debit Left</label>
          <input type="number" class="form-control" id="money_left" name="money_left" size="7"  placeholder="Type something…">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <% if @results %>
      <div class="col-md-6">
        <h2>Results</h2>

        <h3>Usage</h3>
        <p>Time: day <%=@results[:day_passed]%> of <%=@results[:day_total]%> (<%=@results[:day_passed_percent]%>%)</p>
        <p>Spent: <%=@results[:spent_amount]%> of <%=@results[:spent_total]%> (<%=@results[:spent_percent]%>%), or <%=@results[:spent_daily]%> daily</p>

        <h3>Recommendations</h3>
        <p>Spend <%=@results[:recommended_daily_spending]%> daily (<%=@results[:recommended_weekly_spending]%> weekly).</p>
      </div>
    <% end %>
  </div>

  <hr>
    
  <footer class="text-muted">
    This service is not affiliated with RIT. That being said, feel free to email me with feedback at <a href="mailto:thenickperson@gmail.com">thenickperson@gmail.com</a>.
  </footer>
</div>
